{
  "name": "ps-cicd-platform",
  "version": "0.0.0",
  "private": true,
  "description": "Political Sphere CI/CD platform repository",
  "type": "module",
  "license": "UNLICENSED",
  "repository": {
    "type": "git",
    "url": "https://github.com/PoliticalSphere/ci"
  },
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.9.0"
  },
  "packageManager": "npm@10.9.0",
  "scripts": {
    "lint": "bash tools/scripts/lint/formatted.sh",
    "lint:all": "npm -s run lint:biome && npm -s run lint:eslint && npm -s run lint:yaml && npm -s run lint:actionlint && npm -s run lint:hadolint && npm -s run lint:shellcheck && npm -s run lint:markdown && npm -s run lint:cspell && npm -s run lint:knip",
    "lint:affected": "bash tools/scripts/lint/formatted-affected.sh",
    "lint:all:affected": "bash tools/scripts/lint/affected.sh",
    "lint:fix": "bash tools/scripts/lint/formatted.sh --fix",
    "lint:all:fix": "npm -s run lint:biome:fix && npm -s run lint:eslint:fix && npm -s run lint:markdown:fix",
    "lint:fix:affected": "bash tools/scripts/lint/formatted-affected.sh --fix",
    "lint:biome": "bash tools/scripts/lint/biome.sh",
    "lint:biome:affected": "bash tools/scripts/lint/affected.sh biome",
    "lint:biome:fix:affected": "bash tools/scripts/lint/affected.sh biome --fix",
    "lint:biome:fix": "bash tools/scripts/lint/biome.sh --write",
    "lint:eslint": "bash tools/scripts/lint/eslint.sh",
    "lint:eslint:fix": "bash tools/scripts/lint/eslint.sh --fix",
    "lint:eslint:affected": "bash tools/scripts/lint/affected.sh eslint",
    "lint:eslint:fix:affected": "bash tools/scripts/lint/affected.sh eslint --fix",
    "lint:yaml": "bash tools/scripts/lint/yamllint.sh",
    "lint:yaml:affected": "bash tools/scripts/lint/affected.sh yaml",
    "lint:actionlint": "bash tools/scripts/lint/actionlint.sh",
    "lint:actionlint:affected": "bash tools/scripts/lint/affected.sh actionlint",
    "lint:hadolint": "bash tools/scripts/lint/hadolint.sh",
    "lint:hadolint:affected": "bash tools/scripts/lint/affected.sh hadolint",
    "lint:shellcheck": "bash tools/scripts/lint/shellcheck.sh",
    "lint:shellcheck:affected": "bash tools/scripts/lint/affected.sh shellcheck",
    "lint:markdown": "bash tools/scripts/lint/markdownlint.sh",
    "lint:markdown:fix": "bash tools/scripts/lint/markdownlint.sh --fix",
    "lint:markdown:affected": "bash tools/scripts/lint/affected.sh markdown",
    "lint:markdown:fix:affected": "bash tools/scripts/lint/affected.sh markdown --fix",
    "lint:cspell": "bash tools/scripts/lint/cspell.sh",
    "lint:cspell:affected": "bash tools/scripts/lint/affected.sh cspell",
    "lint:knip": "bash tools/scripts/lint/knip.sh",
    "lint:knip:affected": "bash tools/scripts/lint/affected.sh knip",
    "audit": "npm audit --audit-level=moderate",
    "gate:pre-commit": "bash tools/scripts/gates/gate-pre-commit.sh",
    "gate:inline": "PS_LINT_PRINT_MODE=inline npm run gate:pre-commit",
    "gate:final": "PS_LINT_PRINT_MODE=final npm run gate:pre-commit",
    "gate:pre-push": "bash tools/scripts/gates/gate-pre-push.sh",
    "typecheck": "bash tools/scripts/actions/ps-task/typecheck/typecheck.sh",
    "test": "bash tools/scripts/actions/ps-task/test/test.sh",
    "build": "node -e \"console.log('Build: no-op (platform repo)')\"",
    "jscpd": "bash tools/scripts/actions/ps-task/code-duplication-check/jscpd.sh",
    "license-check": "bash tools/scripts/security/license-check.sh",
    "consumer-contract": "bash tools/scripts/consumer/contract-check.sh",
    "validate-ci": "node tools/scripts/workflows/ci/validate-ci/index.js",
    "evasion-scan": "node tools/scripts/security/evasion-scan.js",
    "totem-check": "node tools/scripts/ci/totem-check.js",
    "preflight": "npm -s run lint && npm -s run typecheck && npm -s run test && npm -s run jscpd && npm -s run audit",
    "ci": "npm -s run preflight"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.10",
    "@eslint/js": "9.39.2",
    "@typescript-eslint/eslint-plugin": "8.50.1",
    "@typescript-eslint/parser": "8.50.1",
    "cspell": "9.4.0",
    "eslint": "9.39.2",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-security": "3.0.1",
    "eslint-plugin-sonarjs": "3.0.5",
    "eslint-plugin-unicorn": "62.0.0",
    "globals": "^16.5.0",
    "jscpd": "4.0.5",
    "knip": "5.78.0",
    "markdownlint-cli2": "0.20.0",
    "typescript": "5.9.3",
    "typescript-eslint": "8.50.1",
    "yaml": "2.8.2"
  }
}
