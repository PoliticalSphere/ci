{
  "name": "@politicalsphere/ci",
  "version": "0.0.1",
  "private": true,
  "license": "UNLICENSED",
  "description": "Authoritative CI/CD, governance, and policy-as-code platform for Political Sphere",
  "repository": {
    "type": "git",
    "url": "https://github.com/PoliticalSphere/ci.git"
  },
  "type": "module",
  "engines": {
    "// Node version": "Targets Node LTS versions; 22.x is current LTS as of Jan 2026",
    "node": ">=22.21.1"
  },
  "packageManager": "npm@10.9.2",
  "bin": {
    "ps-lint": "./src/cli/index.ts"
  },
  "scripts": {
    "prepare": "lefthook install",
    "_meta:lint:read-only": "──────────────── linting (read-only, non-mutating) ────────────────",
    "lint": "tsx ./src/cli/index.ts --linters gitleaks,biome,eslint,typescript,knip",
    "lint:all": "tsx ./src/cli/index.ts",
    "lint:biome": "tsx ./src/cli/index.ts --linters biome",
    "lint:json": "npm run lint:biome",
    "lint:eslint": "tsx ./src/cli/index.ts --linters eslint",
    "lint:types": "tsx ./src/cli/index.ts --linters typescript",
    "lint:knip": "tsx ./src/cli/index.ts --linters knip",
    "lint:actions": "tsx ./src/cli/index.ts --linters actionlint",
    "lint:semgrep": "tsx ./src/cli/index.ts --linters semgrep",
    "lint:osv": "tsx ./src/cli/index.ts --linters osv-scanner",
    "lint:markdown": "tsx ./src/cli/index.ts --linters markdownlint",
    "lint:spelling": "tsx ./src/cli/index.ts --linters cspell",
    "lint:yaml": "tsx ./src/cli/index.ts --linters yamllint",
    "lint:docker": "tsx ./src/cli/index.ts --linters hadolint",
    "lint:shell": "tsx ./src/cli/index.ts --linters shellcheck",
    "lint:dup": "tsx ./src/cli/index.ts --linters jscpd",
    "_meta:lint:mutating": "──────────────── linting (mutating / formatting) ──────────────────",
    "lint:format": "npm run lint:biome:fix && npm run lint:markdown:fix",
    "lint:fix": "npm run lint:biome:fix && npm run lint:eslint",
    "lint:fix:unsafe": "npm run lint:biome:fix && npm run lint:eslint:fix",
    "lint:biome:fix": "biome check --write .",
    "lint:eslint:fix": "eslint --fix .",
    "lint:markdown:fix": "tsx ./src/cli/index.ts --linters markdownlint",
    "_meta:policy-security": "──────────────── policy & security ────────────────────────────────",
    "lint:policy": "npm run lint:secrets",
    "lint:secrets": "tsx ./src/cli/index.ts --linters gitleaks",
    "_meta:testing": "──────────────── testing ───────────────────────────────────────────",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "_meta:ci": "──────────────── CI entry points (authoritative) ───────────────────",
    "ci:lint": "npm run lint",
    "ci:test": "npm run test"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@cspell/dict-typescript": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@types/node": "^25.0.3",
    "@types/react": "^19.2.7",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/ui": "^4.0.16",
    "actionlint": "^2.0.6",
    "cspell": "^9.4.0",
    "eslint": "^9.18.0",
    "eslint-plugin-jsdoc": "^61.7.1",
    "eslint-plugin-n": "^17.15.1",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-regexp": "^2.10.0",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-sonarjs": "^3.0.5",
    "eslint-plugin-unicorn": "^62.0.0",
    "eslint-plugin-vitest": "^0.5.4",
    "globals": "^17.0.0",
    "ink": "^6.6.0",
    "ink-spinner": "^5.0.0",
    "jscpd": "^4.0.5",
    "knip": "^5.80.1",
    "lefthook": "^2.0.13",
    "markdownlint-cli2": "^0.20.0",
    "p-map": "^7.0.4",
    "picomatch": "^4.0.3",
    "react": "^19.2.3",
    "semgrep": "^0.0.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.20.0",
    "vitest": "^4.0.16",
    "yamllint-js": "^0.1.0"
  }
}
