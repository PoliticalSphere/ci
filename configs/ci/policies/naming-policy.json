{
  "meta": {
    "version": "1.0.0",
    "owner": "political-sphere",
    "classification": "internal",
    "last_reviewed": "2025-12-19",
    "review_interval_days": 180
  },
  "rules": {
    "workflows": {
      "path": ".github/workflows",
      "pattern": "^[a-z0-9-]+\\.yml$",
      "description": "Lowercase kebab-case .yml filenames"
    },
    "actions": {
      "path": ".github/actions",
      "pattern": "^[a-z0-9-]+$",
      "description": "Lowercase kebab-case action directory names"
    },
    "scripts": {
      "path": "tools/scripts",
      "pattern": "^[a-z0-9-]+\\.sh$",
      "description": "Lowercase kebab-case shell script filenames"
    }
  },
  "allowlist": {
    "workflow_files": [],
    "action_dirs": [],
    "script_files": [],
    "identifiers": []
  },
  "typescript": {
    "description": "Disallowed terms for TypeScript identifiers (applies to all identifiers).",
    "paths": ["**/*.ts", "**/*.tsx", "types.d.ts"],
    "exclude": ["node_modules", "dist", "build", "coverage", ".git"]
  },
  "disallowed_terms": {
    "description": "Terms that should not appear in names (avoid vague or transient labels).",
    "terms": [
      "alpha",
      "archive",
      "archived",
      "backup",
      "bak",
      "beta",
      "bk",
      "cleaned",
      "cleanup",
      "clone",
      "consolidated",
      "copy",
      "copyof",
      "corrected",
      "dead",
      "demo",
      "deprecated",
      "draft",
      "drafts",
      "dupe",
      "duplicate",
      "example",
      "experiment",
      "experimental",
      "final",
      "finalized",
      "fix",
      "fixed",
      "fixme",
      "fixup",
      "hotfix",
      "improve",
      "improved",
      "junk",
      "latest",
      "legacy",
      "misc",
      "miscellaneous",
      "modern",
      "modernized",
      "new",
      "notes",
      "obsolete",
      "old",
      "outdated",
      "placeholder",
      "poc",
      "proof",
      "prototype",
      "quickfix",
      "random",
      "rc",
      "refactor",
      "refactored",
      "rename",
      "renamed",
      "resolved",
      "rev",
      "revert",
      "revision",
      "rework",
      "reworked",
      "rollback",
      "sample",
      "sandbox",
      "scratch",
      "spare",
      "stale",
      "stuff",
      "tbd",
      "temp",
      "tempfile",
      "temporary",
      "things",
      "tmp",
      "todo",
      "trial",
      "unused",
      "update",
      "updated",
      "updates",
      "upgrade",
      "upgraded",
      "v2",
      "v3",
      "wip",
      "working"
    ]
  }
}
